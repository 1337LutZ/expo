#!/usr/bin/env bash

set -eo pipefail

script_dir="$(dirname "$0")"

"$script_dir/npx" jest --coverage --preset expo-module-scripts/"$1"/ios
"$script_dir/npx" jest --coverage --preset expo-module-scripts/"$1"/android
"$script_dir/npx" jest --coverage --preset expo-module-scripts/"$1"/web

if [[ $1 = 'universal' ]]; then
  "$script_dir/npx" jest --coverage --preset expo-module-scripts/"$1"/node
fi
